<div class="panel panel-default sidebar-menu">

    <div class="panel-heading">
        <h3 class="panel-title">Catégories</h3>
    </div>

    <div class="panel-body">
        <ul class="nav nav-pills nav-stacked category-menu">
            <li class="active">
                <a href="#">{{ genre.category.name }}</a>
                <ul>
                    {% for genre_cate in genre.category.genres %}
                        <li>
                            {#il faut optimiser la ligne ci-dessous#}
                            {#<a href="{{ path('ecommerce_article_categorie', {'id': genre_cate.id}) }}">{{ genre_cate.name }} <span class="badge pull-right">{{ genre_cate.articles.count }}</span></a>#}
                            <a href="{{ path('ecommerce_article_categorie', {'id': genre_cate.id}) }}">{{ genre_cate.name }}</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="#">Pas encore de catégories !</a>
                        </li>
                    {% endfor %}
                </ul>
            </li>

        </ul>

    </div>
</div>