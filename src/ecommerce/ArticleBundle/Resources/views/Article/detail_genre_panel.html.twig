<div class="module block_category">
    <h3 class="modtitle">
        Categories </h3>
    <div class="modcontent box-content">
        <ul class="list-group">
            {% for categoryP in categories %}
                <li {% if article.genre.category == categoryP %}class="hadchild"{% endif %}>
                    <a href="{{ path('ecommerce_article_cat', {'id': categoryP.id}) }}"
                       class="list-group-item ">
                        <span>{{ categoryP.name }}</span>
                    </a>
                    <span {% if article.genre.category == categoryP %}class="button-view  ttopen  "
                          {% else %}class="button-view  ttclose  "{% endif %}>view</span>
                    <ul {% if article.genre.category == categoryP %}style="display: block;"
                        {% else %}style="display: none;"{% endif %}>
                        {% for genre_cate in categoryP.genres %}
                            <li>
                                <a href="{{ path('ecommerce_article_categorie', {'id': genre_cate.id}) }}"
                                   class="list-group-item">
                                    <span>&nbsp;&nbsp;&nbsp; {{ genre_cate.name }}</span>
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a href="#">Pas encore de catégories !</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% else %}
                <h4>Pas encore de catégorie</h4>
            {% endfor %}
        </ul>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        $('span.button-view').click(function () {
            if ($(this).hasClass('ttopen')) {
                varche = true
            } else {
                varche = false
            }
            ;
            if (varche == false) {
                $(this).addClass("ttopen");
                $(this).removeClass("ttclose");
                $(this).parent().find('ul').slideDown();
                varche = true;
            } else {
                $(this).removeClass("ttopen");
                $(this).addClass("ttclose");
                $(this).parent().find('ul').slideUp();
                varche = false;
            }
        });
    });

</script>