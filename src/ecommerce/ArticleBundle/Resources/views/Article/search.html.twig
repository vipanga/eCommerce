{# src/ecommerce/ArticleBundle/Resources/views/Article/categorie.html.twig #}

{% extends "ecommerceArticleBundle::layout.html.twig" %}

{% block titre %}
    Recherche {{ product }} - {{ parent() }}
{% endblock %}

{% block active %}active{% endblock %}

{% block contenu_accueil %}

    <section id="yt_breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('ecommerce_accueil_accueil') }}">Accueil</a>
                        </li>
                        <li>Résultat pour "{{ product }}" dans la province "{{ province }}"</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <aside class="col-lg-3 col-sm-4 col-xs-12 content-aside left_column">


                <!-- *** PANNEAU DES CATEGORIES ***
            _________________________________________________________ -->
                {% include "ecommerceArticleBundle:Article:search_panel.html.twig" %}
                <!-- *** ANNEAU DES CATEGORIES FIN *** -->


            </aside>

            <div id="content" class="col-lg-9 col-sm-8 col-xs-12">
                <div class="products-category">
                    <div class="row">
                        <div class="col-sm-12"><img src="{{ asset('img/image-cat-1.jpg') }}" alt="banner"></div>
                    </div>


                    <!-- Filters -->
                    <div class="product-filter filters-panel">
                        <div class="view-mode hidden-sm hidden-xs">
                            <div class="list-view">
                                <button data-original-title="Grid" class="btn btn-default grid active" data-view="grid"
                                        data-toggle="tooltip" title=""><i class="fa fa-th"></i></button>
                                <button data-original-title="List" class="btn btn-default list" data-view="list"
                                        data-toggle="tooltip" title=""><i class="fa fa-th-list"></i></button>
                            </div>
                        </div>
                        <div class="short-by-show form-inline text-right ">
                            <div class="form-group short-by">
                                <label class="control-label" for="input-sort">Province:</label>
                                <select id="input-sort" class="form-control" onchange="location = this.value;">
                                    <option value="#"
                                            selected="selected">Toutes
                                    </option>
                                    <option value="#">
                                        Name (A - Z)
                                    </option>
                                    <option value="#">
                                        Name (Z - A)
                                    </option>
                                    <option value="#">
                                        Price (Low &gt; High)
                                    </option>
                                    <option value="#">
                                        Price (High &gt; Low)
                                    </option>
                                    <option value="#">
                                        Rating (Highest)
                                    </option>
                                    <option value="#">
                                        Rating (Lowest)
                                    </option>
                                    <option value="#">
                                        Model (A - Z)
                                    </option>
                                    <option value="#">
                                        Model (Z - A)
                                    </option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label" for="input-limit">Articles:</label>
                                <select id="input-limit" class="form-control" onchange="location = this.value;">
                                    <option value="{{ path('ecommerce_article_search', {'numberItemsPerPage': 12, 'product': product, 'province': province}) }}"
                                            {% if numberItemsPerPage == 12 %}selected="selected"{% endif %}>12
                                    </option>
                                    <option value="{{ path('ecommerce_article_search', {'numberItemsPerPage': 24, 'product': product, 'province': province}) }}"
                                            {% if numberItemsPerPage == 24 %}selected="selected"{% endif %}>
                                        24
                                    </option>
                                    <option value="{{ path('ecommerce_article_search', {'numberItemsPerPage': 48, 'product': product, 'province': province}) }}"
                                            {% if numberItemsPerPage == 48 %}selected="selected"{% endif %}>
                                        48
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="box-pagination text-right">
                            <ul class="pagination">
                                {#On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b#}
                                {% for p in range(1, nombrePage) %}
                                    {% if p == page %}
                                        <li class="active">
                                            <span>{{ p }}</span>
                                        </li>
                                    {% else %}
                                        <li>
                                            <a href="{{ path('ecommerce_article_search', {'numberItemsPerPage': numberItemsPerPage, 'page': p, 'product': product, 'province': province}) }}">{{ p }}</a>
                                        </li>
                                    {% endif %}

                                {% endfor %}
                                <li>
                                    <a href="{{ path('ecommerce_article_search', {'numberItemsPerPage': numberItemsPerPage, 'page': nombrePage, 'product': product, 'province': province}) }}">
                                        <i class="fa fa-angle-double-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- //end Filters -->


                    <!--changed listings-->

                    <div class="products-list row grid">


                        {% for article in articles %}
                            <div class="product-layout col-lg-4 col-sm-6 col-xs-6">
                                <div class="product-item-container">
                                    <div class="left-block">
                                        <div class="product-image-container lazy second_img ">
                                            <div class="image lazy-loaded flipper">
                                                <img data-src="{{ asset(article.image.webPath|imagine_filter('my_thumb')) }}"
                                                     src="{{ asset(article.image.webPath|imagine_filter('my_thumb')) }}"
                                                     title="{{ article.getNameItem() }}" class="img_1 img-thumbnail">
                                                <img data-src="{{ asset(article.image.webPath|imagine_filter('my_thumb')) }}"
                                                     src="{{ asset(article.image.webPath|imagine_filter('my_thumb')) }}"
                                                     alt="{{ article.getNameItem() }}"
                                                     title="{{ article.getNameItem() }}"
                                                     class="img_0 img-thumbnail">
                                            </div>

                                            <a data-original-title="Quick View" class="quickview iframe-link visible-lg"
                                               data-toggle="tooltip" title="" data-fancybox-type="iframe"
                                               href="{{ path('ecommerce_article_detail', {'id': article.id, 'slug':article.slug}) }}"></a>
                                            <!--countdown box-->


                                            <!--end countdown box-->
                                        </div>


                                        <!--New Label-->


                                        <!--Sale Label-->
                                        {#<span class="label label-sale">Sale</span>#}


                                    </div>
                                    <!-- end left block -->

                                    <div class="right-block">
                                        <div class="caption">
                                            <h4>
                                                <a href="{{ path('ecommerce_article_detail', {'id': article.id, 'slug':article.slug}) }}"
                                                   title="{{ article.getNameItem() }}">{{ article.getNameItem() }}</a> {{ loop.index }}
                                            </h4>
                                            <div class="ratings">
                                                <div class="rating-box">
                                                <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i
                                                            class="fa fa-star-o fa-stack-1x"></i></span>
                                                <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i
                                                            class="fa fa-star-o fa-stack-1x"></i></span>
                                                <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i
                                                            class="fa fa-star-o fa-stack-1x"></i></span>
                                                <span class="fa fa-stack"><i
                                                            class="fa fa-star-o fa-stack-1x"></i></span>
                                                <span class="fa fa-stack"><i
                                                            class="fa fa-star-o fa-stack-1x"></i></span>
                                                </div>
                                            </div>

                                            <div class="price">
                                                <span class="price-new">${{ article.getPrice() }}</span> <span
                                                        class="price-old">$122.00</span>
                                                <span class="price-tax">Ex Tax: $73.00</span>


                                            </div>

                                            <div class="description  item-desc  hidden">
                                                <p>
                                                    {{ article.getDescription() }}
                                                </p>
                                            </div>
                                        </div>

                                        {#<div class="button-group">
                                        <button data-original-title="Compare this Product" class="compare" type="button"
                                                data-toggle="tooltip" title="" onclick="compare.add('36');"><i
                                                class="fa fa-exchange"></i></button>
                                        <button data-original-title="Add to Cart" class="addToCart" type="button"
                                                data-toggle="tooltip" title="" onclick="cart.add('36', '1');"><span>Add to Cart</span>
                                        </button>
                                        <button data-original-title="Add to Wish List" class="wishlist" type="button"
                                                data-toggle="tooltip" title="" onclick="wishlist.add('36');"><i
                                                class="fa fa-heart"></i></button>
                                    </div>#}

                                    </div><!-- right block -->

                                </div>
                            </div>
                        {% else %}
                            <div class="col-sm-12">
                                <h3 class="text-center">Pas (encore !) d'articles</h3>
                            </div>
                        {% endfor %}


                        <div class="clearfix visible-lg-block"></div>
                    </div>
                    <!--// End Changed listings-->


                    <!-- Filters -->
                    <div class="product-filter product-filter-bottom filters-panel" style="float: left; width: 100%;">

                        <div class="view-mode hidden-sm hidden-xs">
                            <div class="list-view">
                                <button class="btn btn-default grid active" data-view="grid"><i
                                            class="fa fa-th-large"></i></button>
                                <button class="btn btn-default list" data-view="list"><i class="fa fa-th-list"></i>
                                </button>
                            </div>
                        </div>
                        <div class="short-by-show text-center ">
                            <div class="form-group">
                                Affichage de {% if page == nombrePage %}
                                    {{ articles.count }}
                                {% else %}
                                    {{ page * numberItemsPerPage }}
                                {% endif %} sur {{ articles.count }} articles({{ nombrePage }} Pages)
                            </div>
                        </div>


                        <div class="box-pagination text-right">
                            <ul class="pagination">
                                {#On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b#}
                                {% for p in range(1, nombrePage) %}
                                    {% if p == page %}
                                        <li class="active">
                                            <span>{{ p }}</span>
                                        </li>
                                    {% else %}
                                        <li>
                                            <a href="{{ path('ecommerce_article_search', {'numberItemsPerPage': numberItemsPerPage, 'page': p, 'product': product, 'province': province}) }}">{{ p }}</a>
                                        </li>
                                    {% endif %}

                                {% endfor %}
                                <li>
                                    <a href="{{ path('ecommerce_article_search', {'numberItemsPerPage': numberItemsPerPage, 'page': nombrePage, 'product': product, 'province': province}) }}">
                                        <i class="fa fa-angle-double-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- //end Filters -->


                    <!--changed listings-->

                    <!--end content-->
                    <script type="text/javascript"><!--
                        function display(view) {
                            $('.products-list').removeClass('list grid').addClass(view);
                            $('.list-view .btn').removeClass('active');
                            if (view == 'list') {
                                $('.products-list .product-layout').addClass('col-lg-12');
                                $('.products-list .product-layout .left-block').addClass('col-lg-4 col-md-4 col-xs-12');
                                $('.products-list .product-layout .right-block').addClass('col-lg-8 col-md-8 col-xs-12');
                                $('.products-list .product-layout .item-desc').removeClass('hidden')
                                $('.list-view .' + view).addClass('active');
                                $.cookie('display', 'list');
                            } else {
                                $('.products-list .product-layout').removeClass('col-lg-12');
                                $('.products-list .product-layout .left-block').removeClass('col-lg-4 col-md-4 col-xs-12');
                                $('.products-list .product-layout .right-block').removeClass('col-lg-8 col-md-8 col-xs-12');
                                $('.products-list .product-layout .item-desc').addClass('hidden');
                                $('.list-view .' + view).addClass('active');
                                $.cookie('display', 'grid');
                            }
                        }

                        $(document).ready(function () {
                            // Check if Cookie exists
                            if ($.cookie('display')) {
                                view = $.cookie('display');
                            } else {
                                view = 'grid';
                            }
                            if (view) display(view);

                            // Click Button
                            $('.list-view .btn').each(function () {
                                var ua = navigator.userAgent,
                                        event = (ua.match(/iPad/i)) ? 'touchstart' : 'click';
                                $(this).bind(event, function () {
                                    $(this).addClass(function () {
                                        if ($(this).hasClass('active')) return '';
                                        return 'active';
                                    });
                                    $(this).siblings('.btn').removeClass('active');
                                    $catalog_mode = $(this).data('view');
                                    display($catalog_mode);
                                });

                            });
                        });

                        //--></script>
                </div>
            </div>

        </div>
    </div>

{% endblock %}