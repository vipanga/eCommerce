                                <p class="help-block">Sélectionnez l’image de votre article.</p>
                                <div class="has-error" style="color: red">
                                    {{ form_errors(form.image) }}
                                </div>
                            </div>
                        </div>

                    </fieldset>

                    {{ form_rest(form) }}

                    <div class="buttons">
                        <div class="pull-right">
                            <input value="Enregistrer Modifications" class="btn btn-primary" type="submit">
                        </div>
                    </div>

                </form>

            </div>

        </div>
    </div>

