        <div class="col-md-9">

            <div class="row" id="productMain">
                <div class="col-sm-6">
                    <div id="mainImage">
                        {# On vérifie qu'une image est bien associée à l'article #}
                    {% if article.image is not null %}
                        <img src="{{ asset(article.image.webPath) }}" alt="{{ article.image.alt }}" width="100%" class="img-responsive">
                    {% else %}
                        <img src="{{ asset('images/detailbig2.jpg') }}" alt="{{ article.getNameItem() }}" width="100%" class="img-responsive">                        
                    {% endif %}
                        
                    </div>

                    {# On vérifie si l'article n'est pas encore vendu #}
                    {% if article.getSolde() is not null %}
                        <div class="ribbon new">
                            <div class="theribbon">NEW</div>
                            <div class="ribbon-background"></div>
                        </div>
                        <!-- /.ribbon -->
                    {% else %}
                        <div class="ribbon sale">
                            <div class="theribbon">VENDU</div>
                            <div class="ribbon-background"></div>
                        </div>
                        <!-- /.ribbon -->
                    {% endif %}
                </div>

                <div class="col-sm-6">
                    <div class="box">
