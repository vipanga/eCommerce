{# src/ecommerce/AccueilBundle/Resources/views/Accueil/contact.html.twig #}

{% extends "ecommerceAccueilBundle::layout.html.twig" %}

{% block titre %}
    Nous contacter - {{ parent() }}
{% endblock %}

{% block contenu_accueil %}

    <section id="yt_breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('ecommerce_accueil_accueil') }}">Accueil</a>
                        </li>
                        <li>Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container contacts">
        <div class="main">

            <div class="row">
                <div id="content" class="col-sm-12">
                    <div class="page-title"><h1>Nous Contacter</h1></div>

                    <div style="position: relative; background-color: rgb(229, 227, 223); overflow: hidden;"
                         id="map-canvas">

                        <div id="map" style="width: 100%; height: 100%"></div>
                        <script>
                            function initMap() {
                                var mapDiv = document.getElementById('map');
                                var map = new google.maps.Map(mapDiv, {
                                    center: {lat: -11.63691246321233, lng: 27.44649580592966},
                                    zoom: 16,
                                    scrollwheel: false
                                });

                                marker = new google.maps.Marker({
                                    map: map,
                                    position: new google.maps.LatLng(-11.63691246321233, 27.44649580592966)
                                });
                                infowindow = new google.maps.InfoWindow({content: '<strong>Tootiye Market</strong><br>Avenue Inmazaz<br> Q. Golf Malela<br> Lubumbashi<br>'});
                                google.maps.event.addListener(marker, 'click', function () {
                                    infowindow.open(map, marker);
                                });
                                infowindow.open(map, marker);
                            }
                        </script>
                        <script src="https://maps.googleapis.com/maps/api/js?callback=initMap"
                                async defer></script>
                    </div>

                    <div class="info-contact">
                        <div class="col-lg-4 col-sm-4 col-xs-12 info-store">
                            <div itemscope itemtype="http://schema.org/LocalBusiness" class="row">
                                <div class="name-store"><h3><span itemprop="name">Tootiye Market</span></h3></div>
                                <address itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                                    <div class="address clearfix form-group">
                                        <div class="icon"><i class="fa fa-home"></i></div>
                                        <div class="text">
                                            <strong>Notre bureau à Lubumbashi</strong><br>
                                            <span itemprop="streetAddress">23, Av. Inmazaz</span>, Q. Golf,
                                            <span itemprop="addressLocality">Lubumbashi</span>,
                                            <span itemprop="addressRegion">Haut-Katanga</span>
                                        </div>
                                    </div>
                                    <div class="address clearfix form-group">
                                        <div class="icon"><i class="fa fa-building" aria-hidden="true"></i></div>
                                        <div class="text">
                                            <strong>Notre bureau à Kolwezi</strong><br>
                                            <span itemprop="streetAddress">594, Av. du 30 Juin</span>, C. Manika,
                                            <span itemprop="addressLocality">Kolwezi</span>,
                                            <span itemprop="addressRegion">Lualaba</span>
                                        </div>
                                    </div>
                                    <div class="phone form-group">
                                        <div class="icon"><i class="fa fa-phone"></i></div>
                                        <div class="text">Téléphone : <span itemprop="telephone">0829000982</span></div>
                                    </div>
                                    <div class="comment">
                                        <p>Vous voulez entrer en contact avec nous ? Avez-vous une préoccupation
                                            particulière à
                                            nous adresser ?</p>
                                        <p>N’hésitez pas de nous contacter, notre centre de service clientèle travaille
                                            pour vous 24/7.</p>
                                    </div>


                                </address>
                            </div>
                        </div>
                        <div class="col-lg-8 col-sm-8 col-xs-12 contact-form">
                            <form action="{{ path('ecommerce_accueil_contact') }}" {{ form_enctype(form) }}
                                  method="POST" class="form-horizontal">
                                <fieldset>
                                    <legend><h3 style="color: #666;">Formulaire de Contact</h3></legend>
                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" for="input-name">Votre Nom</label>
                                        <div class="col-sm-10">
                                            {#<input name="name" id="input-name" class="form-control" type="text">#}
                                            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Votre nom' } }) }}
                                            <div class="has-error" style="color: red">
                                                {{ form_errors(form.name) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" for="input-email">Adresse E-Mail</label>
                                        <div class="col-sm-10">
                                            {#<input name="email" id="input-email" class="form-control" type="text">#}
                                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse email' } }) }}
                                            <div class="has-error" style="color: red">
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" for="input-name">Sujet</label>
                                        <div class="col-sm-10">
                                            {#<input name="name" id="input-name" class="form-control" type="text">#}
                                            {{ form_widget(form.subject, { 'attr': {'class': 'form-control', 'placeholder': 'Sujet' } }) }}
                                            <div class="has-error" style="color: red">
                                                {{ form_errors(form.subject) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" for="input-enquiry">Message</label>
                                        <div class="col-sm-10">
                                            {#<textarea name="enquiry" rows="10" id="input-enquiry"
                                                      class="form-control"></textarea>#}
                                            {{ form_widget(form.content, { 'attr': {'class': 'form-control', 'rows': '10', 'placeholder': 'Message' } }) }}
                                            <div class="has-error" style="color: red">
                                                {{ form_errors(form.content) }}
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>


                                {{ form_rest(form) }}
                                <div class="buttons">
                                    <div class="pull-right">
                                        <button class="button-acc" type="submit"><span>Envoyer</span></button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>


                </div>


            </div>
        </div>
    </div>

    <br>
    <br>

{% endblock %}